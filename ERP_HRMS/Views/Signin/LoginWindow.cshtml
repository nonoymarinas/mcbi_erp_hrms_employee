@{
    ViewData["Title"] = "LoginWindow";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="signin-main-cont jsSigninMainCont">
   
    <div class="signin-user-cont">
        <div class="sigin-header-text-cont">
            <h4 class="sigin-header-text">HR Management System!</h4>
        </div>
        <div class="login-text-cont">
            <svg class="signin-lock-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
